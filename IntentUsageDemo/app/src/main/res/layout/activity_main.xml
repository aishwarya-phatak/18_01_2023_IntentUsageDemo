<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="file:///storage/emulated/0/DCIM/nature_image4.jpeg" />

    <Button
        android:id="@+id/btnShowImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Image" />

    <Button
        android:id="@+id/btnShowImageINGal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Image In Gallery" />

    <Button
        android:id="@+id/btnAudioPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AudioPlay" />

    <Button
        android:id="@+id/btnVideoPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video Play" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share" />

    <Button
        android:id="@+id/btnOpenWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OpenWebsite" />

    <Button
        android:id="@+id/btnCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALL" />

</LinearLayout>